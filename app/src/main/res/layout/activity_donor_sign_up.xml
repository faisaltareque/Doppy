<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/donor_page_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="210dp"
        android:layout_height="338dp"
        android:orientation="vertical"
        >
        <AutoCompleteTextView
            android:background="@drawable/edit_text_style"
            android:id="@+id/donorSignUPFirstName"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:hint="First Name" />

        <AutoCompleteTextView
            android:background="@drawable/edit_text_style"
            android:id="@+id/donorSignUpLastName"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="Last Name"/>

        <AutoCompleteTextView
            android:background="@drawable/edit_text_style"
            android:id="@+id/donorSignUpEmail"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Email"
            android:inputType="textEmailAddress"/>


        <EditText
            android:background="@drawable/edit_text_style"
            android:id="@+id/donorSignUpPassword"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:background="@drawable/edit_text_style"
            android:id="@+id/donorSignUpConfirmPassword"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
        <EditText
            android:background="@drawable/edit_text_style"
            android:id="@+id/donorSignUpContact"
            android:layout_width="230dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:hint="Contact"
            android:inputType="phone"/>

        <Button

            android:id="@+id/donorSignUpButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/rectangular_button_style_donor"
            android:layout_marginTop="10dp"
            android:text="SIGN UP"
            android:textAlignment="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="Already Donor?"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/donorSignUpToLoginPageButton"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Login"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rectangular_button_style_donor"/>

    </LinearLayout>

</LinearLayout>