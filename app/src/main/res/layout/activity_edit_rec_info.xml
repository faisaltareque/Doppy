<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/donor_profile_page_background"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ProfileImage"
            android:layout_width="130dp"
            android:layout_height="118dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/donor_profile_page_dummy_face2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Editfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="First Name"
                android:visibility="visible" />

            <EditText
                android:id="@+id/EditLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="LastNAme" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView5"
                android:layout_width="208dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Contact"
                android:textColor="#070505"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:inputType="textPersonName" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="208dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Email"
                android:textColor="#070505"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textEmailAddress" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPass"
                android:layout_width="208dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Password"
                android:textColor="#070505"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textconPass"
                android:layout_width="208dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Password"
                android:textColor="#070505"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/editconPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />


        </LinearLayout>
        <Button
            android:id="@+id/Deactivate"
            android:layout_width="223dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"

            android:background="@drawable/rectangular_button_style_donor"
            android:gravity="center"
            android:text="Deactivate Account"
            android:textSize="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">


            <Button
                android:id="@+id/savee"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangular_button_style_donor"
                android:gravity="center"
                android:layout_marginRight="10dp"


                android:text="Save Changes"
                android:textSize="10dp" />


            >
            <Button
                android:id="@+id/Display"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:background="@drawable/rectangular_button_style_donor"
                android:gravity="center"


                android:text="Display Database"
                android:textSize="10dp" />


            >



        </LinearLayout>


    </LinearLayout>

</LinearLayout>