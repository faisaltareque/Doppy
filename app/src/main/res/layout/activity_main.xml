<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_page_background"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/mainPageToDonorSignUpButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:text="Donor"
            android:textColor="#505B5E"
            android:textSize="20sp"
            android:background="@drawable/circular_buttons_style"
            />

        <Button
            android:id="@+id/mainPageToRecipientSignUpButton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Recipient"
            android:textColor="#505B5E"
            android:textSize="19sp"
            android:background="@drawable/circular_buttons_style"
            />
    </LinearLayout>
</LinearLayout>